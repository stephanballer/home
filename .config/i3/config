    focused_workspace  $TEXT $TEXT	$COLOR
    active_workspace   $TEXT_LIGHT	$TEXT_LIGHT	$COLOR
    inactive_workspace $COLOR_LIGHT	$COLOR_LIGHT	$TEXT
    urgent_workspace   $URGENT	$URGENT	$URGENT_LIGHT
    binding_mode       $URGENT $URGENT $URGENT_LIGHT
  }

  status_command i3blocks
}

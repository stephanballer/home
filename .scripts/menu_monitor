#!/bin/sh

monitor=$(xrandr | grep " connected" | awk '{print $1}' | ~/.scripts/menu_bone 'monitor to modify:')
if [[ -n $monitor ]]; then
	chosen=$(echo -e "left of...\nright of...\nabove...\nbelow...\nduplicate\nonly\nprimary\noff" | ~/.scripts/menu_bone 'options:')

	case "$chosen" in
		"right of...") 
			monitor2=$(xrandr | grep " connected" | awk '{print $1}' | ~/.scripts/menu_bone "$monitor right of:");
			xrandr --output $monitor2 --auto; xrandr --output $monitor --auto --right-of $monitor2;;
		"left of...")
			monitor2=$(xrandr | grep " connected" | awk '{print $1}' | ~/.scripts/menu_bone "$monitor left of:");
			xrandr --output $monitor2 --auto; xrandr --output $monitor --auto --left-of $monitor2;;
		"above...")
			monitor2=$(xrandr | grep " connected" | awk '{print $1}' | ~/.scripts/menu_bone "$monitor above:");
			xrandr --output $monitor2 --auto; xrandr --output $monitor --auto --above $monitor2;;
		"below...")
			monitor2=$(xrandr | grep " connected" | awk '{print $1}' | ~/.scripts/menu_bone "$monitor below:");
			xrandr --output $monitor2 --auto; xrandr --output $monitor --auto --below $monitor2;;
		duplicate)
			monitor2=$(xrandr | grep " connected" | awk '{print $1}' | ~/.scripts/menu_bone "$monitor same as:");
			xrandr --output $monitor --auto; xrandr --output $monitor2 --auto --same-as $monitor;;
		only)
			for mon in $(xrandr --listactivemonitors); do
				xrandr --output $mon --off;
			done
			xrandr --output $monitor --auto;;
		primary)
			xrandr --output $monitor --primary;;

		off) xrandr --output $monitor --off;;
	esac
fi

